# =============================================================================
# Guincoin Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# DO NOT commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES
# -----------------------------------------------------------------------------

# PostgreSQL database connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/guincoin"

# Session secret for signing cookies (minimum 16 chars, 32+ recommended for production)
# Generate with: openssl rand -hex 32
SESSION_SECRET="your-super-secret-session-key-here"

# -----------------------------------------------------------------------------
# GOOGLE OAUTH (required in production)
# -----------------------------------------------------------------------------
# Get credentials from: https://console.cloud.google.com/apis/credentials

# OAuth 2.0 Client ID
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"

# OAuth 2.0 Client Secret
GOOGLE_CLIENT_SECRET="your-client-secret"

# Optional: Restrict login to a specific Google Workspace domain
# Leave empty to allow any Google account
GOOGLE_WORKSPACE_DOMAIN="example.com"

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------

# Server port (default: 5000)
PORT=5000

# Environment mode: development | production | test
NODE_ENV="development"

# Frontend URL for CORS and redirects (default: http://localhost:3000)
FRONTEND_URL="http://localhost:3000"

# Backend URL for generating absolute URLs (default: http://localhost:5000)
BACKEND_URL="http://localhost:5000"

# Cookie domain for session cookies (optional)
# Set this if running on a subdomain, e.g., ".example.com"
# COOKIE_DOMAIN=""

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------

# Enable/disable rate limiting (default: true)
RATE_LIMIT_ENABLED="true"

# Maximum requests per window (default: 100 in production, 1000 in development)
# RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (default: 900000 = 15 minutes)
# RATE_LIMIT_WINDOW_MS=900000

# -----------------------------------------------------------------------------
# INTEGRATIONS
# -----------------------------------------------------------------------------

# Google Chat bot verification token (optional)
# Used to verify incoming webhook requests from Google Chat
# GOOGLE_CHAT_VERIFICATION_TOKEN=""

# Redis URL for distributed caching/sessions (optional)
# If not set, in-memory stores are used
# REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# SMTP EMAIL CONFIGURATION (optional)
# Configure via Admin Portal > Settings > SMTP
# -----------------------------------------------------------------------------
# Email settings are stored in the database and configured through the admin UI.
# No environment variables required for email.
